@model IEnumerable<WebApplication1.Models.Motel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalRoom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HostPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>                      
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MotelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>         
                <td>
                    @Html.DisplayFor(modelItem => item.TotalRoom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HostPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
